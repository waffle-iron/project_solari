<p id="notice"><%= notice %></p>

<h1>Listing Achievements</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th>Conunt</th>
      <th>Difficulty</th>
      <th>Requirement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @achievements.each do |achievement| %>
      <tr>
        <td><%= achievement.achievement_type %></td>
        <td><%= achievement.name %></td>
        <td><%= achievement.description %></td>
        <td><%= achievement.image %></td>
        <td><%= achievement.count %></td>
        <td><%= achievement.difficulty %></td>
        <td><%= achievement.requirement %></td>
        <td><%= link_to 'Show', achievement %></td>
        <td><%= link_to 'Edit', edit_achievement_path(achievement) %></td>
        <td><%= link_to 'Destroy', achievement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

